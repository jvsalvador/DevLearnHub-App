<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.Java_Module4_9">

    <TextView
        android:id="@+id/textView212"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Java Assertions"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView212"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Assertions in Java help to detect bugs by testing code we assume to be true.\n\nAn assertion is made using the assert keyword.\n\nIts syntax is"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView214"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView213"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:text="\n   assert condition;\n"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView215"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView214"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Here, condition is a boolean expression that we assume to be true when the program executes."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView216"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView215"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:text="\n   class Main {\n       public static void main(String args[]) {\n          String[] weekends = {&quot;Friday&quot;, &quot;Saturday&quot;, &quot;Sunday&quot;};\n          assert weekends.length == 2;\n          System.out.println(&quot;There are &quot; + weekends.length + &quot;  weekends in a week&quot;);\n       }\n   }"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView217"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView216"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Output"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView218"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView217"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:text="\n   There are 3 weekends in a week\n"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView219"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView218"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="We get the above output because this program has no compilation errors and by default, assertions are disabled."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/btn_tap_to_next28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="All Done!"
        android:textSize="16sp" />
</RelativeLayout>