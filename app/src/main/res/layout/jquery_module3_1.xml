<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.Jquery_Module3_1">

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/textView385"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView23"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="R Booleans (Comparison and Logical Operators)"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView386"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView385"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="\nIn R, boolean variables can take only 2 values: TRUE and FALSE. For example,\n"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView387"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView386"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:text="\n    # declare boolean\n    x &lt;- TRUE print(x)\n    print(class(x))\n\n    # declare boolean using single character\n    y &lt;- F\n    print(y) print(class(y))\n"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView388"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView387"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Output"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView389"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView388"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:text="\n    [1] TRUE\n    [1] &quot;logical&quot;\n    [1] FALSE\n    [1] &quot;logical&quot;\n"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView390"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView389"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Here, we have declared x and y as boolean variables. In R, Boolean variables belong to the logical class.  You can also declare boolean variables using a single character - T or F. Here, T stands for TRUE and F stands for FALSE."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/jquery_tap_to_next3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Tap to continue"
        android:textSize="16sp" />
</RelativeLayout>