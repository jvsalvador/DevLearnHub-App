<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.Java_Module5_4">

    <TextView
        android:id="@+id/textView235"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Java ArrayList"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView241"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView235"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="In Java, we use the ArrayList class to implement the functionality of resizable-arrays.  It implements the List interface of the collections framework.  "
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView241"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/java_5" />

    <TextView
        android:id="@+id/textView242"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView35"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Java ArrayList Vs Array"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView243"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView242"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="In Java, we need to declare the size of an array before we can use it.\n\nOnce the size of an array is declared, it's hard to change it.  To handle this issue, we can use the ArrayList class. It allows us to create resizable arrays.\n\nUnlike arrays, arraylists can automatically adjust their capacity when we add or remove elements from them. Hence, arraylists are also known as dynamic arrays."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView244"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView243"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Creating an ArrayList"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView245"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView244"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Before using ArrayList, we need to import the java.util.ArrayList package first. Here is how we can create arraylists in Java:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView246"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView245"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:text="\nArrayList&lt;Type> arrayList= new ArrayList&lt;>();\n"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/btn_tap_to_next32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Tap to continue"
        android:textSize="16sp" />
</RelativeLayout>